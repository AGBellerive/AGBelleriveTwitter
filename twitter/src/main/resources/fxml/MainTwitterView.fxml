            <Button fx:id="homeIconBtn" mnemonicParsing="false" onAction="#homeIconBtnClick" prefHeight="40.0" prefWidth="50.0" />
            <Button fx:id="tweetIconBtn" mnemonicParsing="false" onAction="#tweetIconBtnClick" prefHeight="50.0" prefWidth="50.0" />
            <Button fx:id="dmIconBtn" mnemonicParsing="false" onAction="#dmIconBtnClick" prefHeight="50.0" prefWidth="50.0" />
            <Button fx:id="helpBtn" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="Help" />
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#exitBtnClick" prefHeight="50.0" prefWidth="50.0" text="Exit" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="homePane" prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Label text="Home" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane fx:id="tweetPane" prefHeight="200.0" prefWidth="200.0">
               <top>
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">

                     </padding>
                  </HBox>
               </top>
               <center>
                  <TextArea fx:id="tweetTextArea" prefHeight="266.0" prefWidth="479.0" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <Button fx:id="sendTweetBtn" mnemonicParsing="false" text="Tweet!" BorderPane.alignment="CENTER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
               </bottom>
            </BorderPane>
            <BorderPane fx:id="dmPane" prefHeight="200.0" prefWidth="200.0">

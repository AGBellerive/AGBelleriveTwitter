<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="homePane" prefHeight="200.0" prefWidth="200.0" stylesheets="@../styles/twitterview.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agbellerive.twitter.controller.FeedViewController">
   <center>
      <ListView fx:id="tweetList" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox prefHeight="28.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#refreshClick" text="Refresh" />
         </children>
      </HBox>
   </top>
</BorderPane>
